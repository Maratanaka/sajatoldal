---
let isOpen = false;
---

<nav class="flex justify-between items-center py-4 max-w-3xl mx-auto">
  <!-- Logo -->
  <a href="/" class="text-xl font-bold">Craftzdog Uses</a>

  <!-- Desktop Menu -->
  <div class="hidden md:flex space-x-6">
    <a href="/hardware" class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">Hardware</a>
    <a href="/software" class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">Software</a>
    <a href="/design" class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">Design</a>
    <a href="https://github.com/craftzdog/craftzdog-uses" target="_blank" class="text-sm text-blue-600 dark:text-blue-400">GitHub</a>
  </div>

  <!-- Mobile Hamburger -->
  <button id="menu-toggle" class="md:hidden text-2xl focus:outline-none">
    â˜°
  </button>
</nav>

<!-- Mobile Menu -->
<div id="mobile-menu" class="overflow-hidden max-h-0 transition-all duration-300 md:hidden bg-gray-100 dark:bg-gray-800">
  <div class="flex flex-col space-y-4 px-6 py-4">
    <a href="/hardware" class="block text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">Hardware</a>
    <a href="/software" class="block text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">Software</a>
    <a href="/design" class="block text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">Design</a>
    <a href="https://github.com/craftzdog/craftzdog-uses" target="_blank" class="block text-sm text-blue-600 dark:text-blue-400">GitHub</a>
  </div>
</div>

<script>
  const toggleBtn = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  toggleBtn.addEventListener("click", () => {
    if (mobileMenu.style.maxHeight && mobileMenu.style.maxHeight !== "0px") {
      mobileMenu.style.maxHeight = "0px"; // slide up
    } else {
      mobileMenu.style.maxHeight = mobileMenu.scrollHeight + "px"; // slide down
    }
  });
</script>
