---
const { title, items, images } = Astro.props;
---
<article 
  id={Astro.props.id} 
  class="bg-white p-6 rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 space-y-4"
>
  <h2 class="text-2xl font-semibold">{Astro.props.title}</h2>
  <ul class="list-disc pl-6 space-y-1 text-gray-700">
    {Astro.props.items.map((item) => (
      <li>{item}</li>
    ))}
  </ul>
  {Astro.props.images && (
    <div class="flex flex-wrap gap-4">
      {Astro.props.images.map((img) => (
        <img src={img} alt="" class="w-16 h-16 object-contain rounded-lg shadow-sm" />
      ))}
    </div>
  )}
</article>




