---
import Layout from "../Layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout>
  <main class="max-w-3xl mx-auto p-6 space-y-12">
    <h1 class="text-4xl font-bold mb-6">Uses</h1>
    <p class="text-lg mb-8 text-gray-600">Here’s the software, hardware, and tools I use for coding, design, and daily work.</p>

    <Card 
      title="Hardware" 
      items={["MacBook Pro 14” M1 Pro", "ASUS ROG Strix Monitor", "HHKB Professional 2 Keyboard"]} 
      images={["public/images/MacBook_Pro_01.jpg", "/images/posts/monitor.png", "/images/posts/hhkb.png"]}
    />
    
    <Card 
      title="Software" 
      items={["Neovim + VSCode", "iTerm2", "Raycast", "Notion"]} 
      images={["/images/posts/vscode.png", "", "", ""]}
    />
    
    <Card 
      title="Design" 
      items={["Figma", "Adobe Photoshop"]} 
      images={["/images/posts/figma.png", "/images/posts/photoshop.jpg"]}
    />
  </main>
</Layout>


