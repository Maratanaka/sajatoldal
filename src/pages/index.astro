---
import Layout from "../Layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout>
  <div class="relative w-full mt-2 mb-6 h-[50vh] overflow-hidden">
    <!-- Videó -->
    <video 
      class="w-full h-full object-cover"
      autoplay 
      muted 
      loop 
      playsinline
    >
      <source src="/images/IMG_4152.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>

    <!-- Fehér overlay -->
    <div class="absolute inset-0 bg-white/30 z-10"></div>
  </div>

  <main class="max-w-6xl mx-auto p-6">
    <h1 class="text-4xl font-bold mb-6">Uses</h1>
    <p class="text-lg mb-8 text-gray-600">
      Here’s the Computing, Frontend, and Backend I use for coding, design, and daily projects.
    </p>

    <!-- Cards container -->
    <div class="flex flex-col md:flex-row md:space-x-6 space-y-6 md:space-y-0">
      <Card 
        title="Computing" 
        items={["Asus TUF Gaming F16 FX607VU-RL041W ", "Logitech G305 Lightspeed", "Logitech G PRO X Gaming"]} 
        images={["/images/Asus-tuf-gaming-laptop.jpg", "/images/ligitech-g305-lightspeed.jpg", "/images/logitech-headset.jpg"]}
        class="flex-1"
      />
      
      <Card 
        title="Frontend" 
        items={["HTML/CSS/JavaScript", "React.js/Vue.js", "Bootstrap/TailwindCSS", "Git"]} 
        images={["/images/HTML-CSS-JS-Logo.png", "/images/react-vue.png", "/images/bootstrap-vs-tailwind.png", "/images/Git_icon.svg.png"]}
        class="flex-1"
      />
      
      <Card 
        title="Backend" 
        items={["C#", "ASP.NET", "MySQL"]} 
        images={["/images/Csharp_Logo.png", "/images/asp.net.png", "/images/MySQL-Logo.wine.png"]}
        class="flex-1"
      />
    </div>
  </main>
</Layout>
